## Pengerjaan

harga_reguler = 50000
harga_vip = 100000

tipe_tiket = input("Masukkan tipe tiket (reguler/vip): ").lower()
member = input("Apakah Anda memiliki kartu member? (ya/tidak): ").lower()

harga = harga_vip if tipe_tiket == "vip" else harga_reguler

diskon = 0.2 * harga if member == "ya" else 0

total = harga - diskon

print(f"\nTipe tiket: {tipe_tiket.capitalize()}")
print(f"Status member: {'Ya' if member == 'ya' else 'Tidak'}")
print(f"Total harga yang harus dibayar: Rp{int(total):,}")
